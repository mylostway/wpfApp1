<UserControl x:Class="WpfApp1.Panels.functional.WaitingDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Panels.functional"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:smtx="clr-namespace:ShowMeTheXAML;assembly=ShowMeTheXAML"             
             mc:Ignorable="d" Width="350">
    <StackPanel VerticalAlignment="Center" Margin="16,0">
        <ProgressBar Width="24" Height="24" Margin="16" IsIndeterminate="True" Value="33"
                     Style="{DynamicResource MaterialDesignCircularProgressBar}"/>
        <TextBlock x:Name="tbx_processingNotice" Grid.Row="1" FontSize="16" Margin="10" MaxWidth="300"
                       HorizontalAlignment="Center" Text="请求处理中..."></TextBlock>
        <Button x:Name="btn_close" Content="确定" Grid.Row="2" Margin="10"
                    Visibility="Hidden" Width="80" Height="30" Command="materialDesign:DialogHost.CloseDialogCommand"></Button>
    </StackPanel>
</UserControl>
